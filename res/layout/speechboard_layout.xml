<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SpeechBoard"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <!-- Screen Design for Photos -->
        <dk.aau.cs.giraf.gui.GGridView
            android:id="@+id/supercategory"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:numColumns="1"
            />

        <dk.aau.cs.giraf.gui.GGridView
            android:id="@+id/subcategory"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:numColumns="1"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:weightSum="1">

            <dk.aau.cs.giraf.gui.GGridView
                android:id="@+id/pictogramgrid"
                android:layout_width="1002dp"
                android:layout_height="match_parent"
                android:stretchMode="none"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
                android:scrollbarSize="20dip"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="right"
                >

                <dk.aau.cs.giraf.gui.GButtonSettings
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSettings"
                    android:layout_gravity="center_vertical" />

                <dk.aau.cs.giraf.gui.GButtonTrash
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnClear"
                    android:layout_gravity="center_vertical" />


                <dk.aau.cs.giraf.gui.GButtonPlay
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPlay"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <dk.aau.cs.giraf.gui.GGridView
            android:id="@+id/sentenceboard"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollbars="horizontal"
            android:columnWidth="205dp"
            android:numColumns="7"
            android:stretchMode="none"
             />


    </LinearLayout>

</LinearLayout>