<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SpeechBoard"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <!-- Screen Design for Photos -->
		<GridView
			android:id="@+id/supercategory"
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:numColumns="1"
			android:background="@drawable/sentenceboardlayout"
			 />
	
		<GridView
			android:id="@+id/subcategory"
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:numColumns="1"
			android:background="@drawable/sentenceboardlayout"
			android:visibility="visible" />
        
		<GridView
	        android:id="@+id/pictogramgrid"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:stretchMode="none"
	        android:background="@drawable/sentenceboardlayout"
	        android:scrollbars="vertical"
	        android:fadeScrollbars="false"
	        android:scrollbarAlwaysDrawVerticalTrack="true"
    		android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
    		android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
    		android:scrollbarSize="20dip"
	        >
	        
		    </GridView>

    </LinearLayout>

	<GridView
	    android:id="@+id/sentenceboard"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:columnWidth="205dp"
	    android:numColumns="7"
	    android:stretchMode="none"
   	    android:horizontalSpacing="5dp"
	    android:verticalSpacing="5dp" >
	</GridView>



</LinearLayout>